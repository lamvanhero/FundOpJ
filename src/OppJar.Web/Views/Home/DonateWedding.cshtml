@*@model DonateWeddingViewModel*@

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>OppJar</title>
    <meta name="description" content="Crowdfunding Savings Accounts for Every Child" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimal-ui" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- for ios 7 style, multi-resolution icon of 152x152 -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-barstyle" content="black-translucent">
    <link rel="apple-touch-icon" href="~/assets/images/logo.svg">
    <meta name="apple-mobile-web-app-title" content="Zeus">
    <!-- for Chrome on Android, multi-resolution icon of 196x196 -->
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="shortcut icon" sizes="196x196" href="/favicon.ico">

    <!-- style -->
    <link rel="stylesheet" href="~/css/animate.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/glyphicons/glyphicons.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/font-awesome/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/material-design-icons/material-design-icons.css" type="text/css" />

    <link rel="stylesheet" href="~/assets/bootstrap/dist/css/bootstrap.min.css" type="text/css" />
    <!-- Toast-->
    <link href="~/js/Toastr/toaster.min.css" rel="stylesheet" type="text/css" />
    <!-- build:css /assets/styles/app.min.css -->
    <link rel="stylesheet" href="~/assets/styles/app.css" type="text/css" />
    <!-- endbuild -->
    <link rel="stylesheet" href="~/assets/styles/font.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,500,600,700,700i,900" rel="stylesheet">
    <style>
        .app {
            background: url('/assets/images/welcomeKids.jpg') no-repeat fixed;
            background-size: auto 620px;
            background-position: right 0px top -100px;
        }

        @@media (min-width: 1500px) {
            .app {
                background-size: cover;
            }
        }

        @@media only screen and (max-width : 768px) {
            .app {
                background-size: cover;
                background-size: auto 400px;
                background-position: left -50px top -100px;
            }

            .navbar {
                margin-left: 0px;
                margin-right: 0px;
            }

            #hero-image {
                height: 280px;
            }
        }

        @@media only screen and (max-width : 992px) {
            .app-header {
                position: relative;
            }

            .m-x-lg {
                margin-right: 15px !important;
                margin-left: 15px !important;
            }
        }

        @@media only screen and (min-width : 993px) {
            .app-header {
                position: fixed;
            }
        }

        @@media only screen and (min-width : 768px) {
            #hero-image {
                height: 620px;
            }
        }

        @@media only screen and (max-width : 992px) and (min-width : 768px) {
            #hero-image {
                height: 532px;
            }
        }

        @@media only screen and (min-width : 993px) {
            .hero-text {
                margin-top: 268px !important;
            }
        }

        @@media only screen and (max-width : 992px) {
            .app-body {
                padding-top: 0 !important;
            }
        }

        .StripeElement {
            box-sizing: border-box;
            height: 40px;
            padding: 10px 12px;
            border: 1px solid transparent;
            border-radius: 4px;
            background-color: white;
            box-shadow: 0 1px 3px 0 #e6ebf1;
            -webkit-transition: box-shadow 150ms ease;
            transition: box-shadow 150ms ease;
        }

        .StripeElement--focus {
            box-shadow: 0 1px 3px 0 #cfd7df;
        }

        .StripeElement--invalid {
            border-color: #fa755a;
        }

        .StripeElement--webkit-autofill {
            background-color: #fefde5 !important;
        }

        #card-errors, .field-validation-error {
            color: red;
        }

        input.currency {
            text-align: right;
            padding-right: 15px;
        }

        .input-group .form-control {
            float: none;
        }

        .input-group .input-buttons {
            position: relative;
            z-index: 3;
        }
    </style>
</head>

<body style=" margin:0 auto;">
    <div class="app-header box-shadow" style="background-color:#4f87b8">
        <div class="navbar">
            <span class="navbar-brand"><img src="/assets/images/oppjar-logo.PNG" class="m-t-sm oppjar-logo"></span>
        </div>
    </div>

    <div class="app center" style="background-size: inherit;">
        <div id="content" class="app-content box-shadow-z0 tansparent" role="main">
            <div class="app-body white p-t-lg" id="view">
                <div class="row-col">
                    <div class="padding">
                        <div class="row center m-x-auto" style="max-width:767px;" id="section-donate-form">
                            <div class="text-center">
                                <h5>Welcome to the CastrosInPaso OppJar page for Marcos and Gabo.</h5>
                                <h5>All donations are much appreciated!</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <img src="~/images/donation/donation-header.jpg" class="img-responsive" />
                                    <img src="~/images/donation/Collage.jpg" class="img-responsive" />
                                </div>
                            </div>
                            <br />
                            <div class="box b-a padding" style="background-color:#f0f0f0">
                                @*@using (Html.BeginForm("DonateWedding", "Home", FormMethod.Post, new { @id = "donate-wedding-form" }))*@
                                @using (Html.BeginForm("", "Home", FormMethod.Post, new { @id = "donate-wedding-form" }))
                                {
                                    <div class="form-row">
                                        <label class="form-control-label"><strong>About OppJar</strong></label>
                                        <label class="form-control-label">
                                            OppJar, short for Opportunity Jar, is an exciting startup recently founded by Danny and one of his MIT classmates as a way to help parents save for their child’s future.
                                            With OppJar, parents can instantly create a free “OppJar Fund” for their child. These funds are similar to a trust fund, but do not require an upfront cost or minimum balance.
                                        </label>
                                        <label class="form-control-label">
                                            Social media savvy parents can then utilize OppJar's patent pending technology to connect their child’s OppJar Fund to friends and family.
                                            Each posting on social media becomes yet another opportunity to receive contributions to their child’s OppJar Fund.
                                            To learn more about OppJar, please <a style="color:blue" href="https://vimeo.com/293434321" target="_blank">click here</a>.
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">Your Name: <strong class="text-danger">*</strong></label>
                                        @*@Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Your Name" })*@
                                        <input type="text" class = "form-control" placeholder = "Your Name">
                                               @*@Html.ValidationMessageFor(x => x.Name)*@
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">Email Address: <strong class="text-danger">*</strong></label>
                                        @*@Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email Address" })*@
                                        <input type="text" class="form-control" placeholder="Email Address">
                                        @*@Html.ValidationMessageFor(x => x.Email)*@
                                    </div>
                                    <div class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label" for="IsReceiveNotify">Please email me when the OppJar app is available for download: </label>
                                            @*@Html.CheckBoxFor(x => x.IsReceiveNotify, new { @class = "form-check-input" })*@
                                            <input type="checkbox" class="form-check-input"/>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            Danny and Maria invited only their closest friends and family to their wedding. So if you're reading this, you're special. 😊
                                        </label>
                                        <label class="form-control-label">
                                            Please share with Marcos and Gabo how you know their parents and what they mean to you. They'll be reading this 20 years from now!
                                        </label>
                                        @*@Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Your Message to Marcos and Gabo" })*@
                                        <input type="text" class="form-control" placeholder = "Your Message to Marcos and Gabo"/>
                                        @*@Html.ValidationMessageFor(x => x.Message)*@
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">I would like to donate to: <strong class="text-danger">*</strong></label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            @for (var i = 0; i < Model.DonateChilds.Count; i++)
                                            {
                                                var donateId = $"donate-amount-{i}";
                                                <div class="col-md-6">
                                                    <label class="form-control-label">@Model.DonateChilds[i].Name</label>
                                                    @*@Html.HiddenFor(x => Model.DonateChilds[i].RecipientId)
                                                    @Html.HiddenFor(x => Model.DonateChilds[i].Name)*@
                                                    <div class="input-group">
                                                        <span class="input-group-addon">$</span>
                                                        @*@Html.TextBoxFor(x => Model.DonateChilds[i].Amount, new { @class = "form-control donate-amount currency", @placeholder = "Amount ($)", @type = "number", @min = 0, @id = donateId })*@
                                                        <input type="text" class="form-control donate-amount currency" placeholder="amount"/>
                                                        <span class="input-group-addon">.00</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <span class="field-validation-error" data-valmsg-for="DonateChilds__Amount" data-valmsg-replace="true">
                                            <span id="donate-child-amount-error" class="">Please donate to at least one child.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <div id="card-element">
                                            <!-- A Stripe Element will be inserted here. -->
                                        </div>

                                        <!-- Used to display form errors. -->
                                        <div id="card-errors" role="alert"></div>
                                    </div>
                                    @*<div class="form-group">
                                        <div class="col-md-12">
                                            <p>Upload one or more files using this form:</p>
                                            <input type="file" name="files" id=file-upload>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="button" value="Upload" id="btn-upload" multiple>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <img src="/api/v1/file/download/success.png" width="100" />
                                    </div>*@
                                    <div class="text-right">
                                        <button class="btn btn-primary">Donate</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Loader")
    <!-- build:js /scripts/app.html.js -->
    <!-- jQuery -->
    <script src="~/libs/jquery/jquery/dist/jquery.js"></script>
    <!-- jQuery Validation-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- Toast-->
    <script src="~/js/Toastr/toastr.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/libs/jquery/tether/dist/js/tether.min.js"></script>
    <script src="~/libs/jquery/bootstrap/dist/js/bootstrap.js"></script>
    <!-- core -->
    <script src="~/libs/jquery/underscore/underscore-min.js"></script>
    <script src="~/libs/jquery/jQuery-Storage-API/jquery.storageapi.min.js"></script>
    <script src="~/libs/jquery/PACE/pace.min.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="~/scripts/config.lazyload.js"></script>
    <script src="~/scripts/palette.js"></script>
    <script src="~/scripts/ui-load.js"></script>
    <script src="~/scripts/ui-jp.js"></script>
    <script src="~/scripts/ui-include.js"></script>
    <script src="~/scripts/ui-device.js"></script>
    <script src="~/scripts/ui-form.js"></script>
    <script src="~/scripts/ui-nav.js"></script>
    <script src="~/scripts/ui-screenfull.js"></script>
    <script src="~/scripts/ui-scroll-to.js"></script>
    <script src="~/scripts/ui-toggle-class.js"></script>
    @*<script src="~/scripts/app.js"></script>*@
    <script src="~/js/donate-wedding.js"></script>
    <!-- ajax -->
    <script src="~/libs/jquery/jquery-pjax/jquery.pjax.js"></script>
    <script src="~/scripts/ajax.js"></script>
    <!-- endbuild -->
    <script>
        donation.init('@Url.Action("donate", "home")', '@ViewBag.PublicKey');
        var file;

        $("#file-upload").change(function (e) {
            file = event.target.files[0];
        });

        $("#btn-upload").click(function (e) {
            var formData = new FormData();
            formData.append("file", file);
            $.ajax({
                type: "POST",
                url: "/api/v1/file/upload",
                processData: false,
                contentType: false,
                data: formData,
                success: function (resp) {
                    console.log(resp);
                },
                error: function (error) {
                    console.log(error);
                }
            })
        });
    </script>
</body>

</html>
