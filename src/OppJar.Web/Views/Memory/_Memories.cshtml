@model IEnumerable<MemoryViewModel>

<h2 class="headline">Share Somethings?</h2>
<div id="postChatBox">
    <textarea name="content"
              id="post-text-area"
              class="content-area"
              placeholder="Say something"
              required></textarea>
    <input id="hid-preview" type="hidden" value="" />
    <div id="preview-content" class="m-t-2">
        <img id="img-preview" src="#" height="200" />
        <video id="video-preview" controls height="200">
            Unsupported video type
        </video>
        <audio id="audio-preview" controls>
            Your browser does not support the audio element.
        </audio>
    </div>
    <div class="lnk-preview row"></div>
    <div class="d-flex justify-content-between">
        <div class="media-icon d-flex">
            <div class="pointer mr-2">
                <input id="feed-upload" type="file" hidden accept="image/png, image/jpeg, image/jpg, audio/mpeg, audio/x-wav, video/mp4, video/mpeg" />
                <button class="btn" onclick="memoriesManage.openFile();">
                    <span class="icon-overlay">
                        <span class="icon icon-photo"></span>
                    </span><span class="icon-text">Add a photo, audio or video</span>
                </button>
            </div>
        </div>
        <div class="post-btn">
            <button id="post-button" class="btn btn-create">Post</button>
        </div>
    </div>
    <div id="status"></div>
</div>

<div id="feed" class="padding feedcls">
    @if (!Model.Any())
    {
        <div class="sl-item">
            <div class="sl-content">
                <p>No Feed History</p>
            </div>
        </div>
    }
    else
    {
        @await Html.PartialAsync("_MemoryUpdate", Model)
    }
</div>
