                    }
                }).done(data => {
                    if (data.success) {
                        for (var i = 0; i < this.model.applications.length; ++i) {
                            if (this.model.applications[i].applicationRequestId === applicationRequestId) {
                                this.model.applications.splice(i, 1);
                                break;
                            }
                        }
                    }
                });
            }
